<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>签到</title>
         <style type="text/css">
            body {
                margin: 0;
                background: url(../img/signup.png) no-repeat center center;
                position: fixed;
                background-position:0% 0%;  
                background-size:cover; 
            }
            .avatar {
                 display:block;
                 top:22%;
                 left:45%;
                 position:fixed;
                 border:1px solid #fff;
                 text-align:center;
             }
        </style>
    </head>
    <body>
        <div class="avatar">
           <img src="<%=user.avatar%>" height="120" width="120"/>
           <div><%=user.message%></div>
        </div>
    </body>
        <script src="../js/jquery.js"></script>
        <script type="text/javascript">
            var socket = null;
            var url = "ws://"+ window.location.host +"/signup";
            $(function() {
               if ('WebSocket' in window)
                    socket = new WebSocket(url);
               else if ('MozWebSocket' in window)
                    socket = new MozWebSocket(url);

               socket.onopen = function() {
                  socket.send({
                     avatar:"<%=user.avatar%>",
                     num:"<%=user.num%>",
                     name:"<%=user.name%>"
                  });
               };
            })
        </script>
</html>