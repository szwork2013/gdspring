<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>签到</title>
         <style type="text/css">
            body {
                margin: 0;
                background: url(../../img/signup.png) no-repeat center center;
                position: fixed;
                background-position:0% 0%;  
                background-size:cover; 
            }
            .avatar {
                 display:block;
                 top:50%;
                 left:45%;
                 position:fixed;
                 border:1px solid #fff;
                 text-align:center;
             }
             .message {
                 display:block;
                 top:59%;   
                 left:20%;
                 position:fixed;
                 font-family:"楷体"; 
                 font-size: 40px;
                 text-align:center;
                 height:80%;
                 width:60%;
             }
        </style>
    </head>
    <body id="bodyId">
            <div class="avatar">
               <!-- <img src="<%=user.avatar%>" height="120" width="120" id="headImg"/> -->
            </div>
            <div class="message"><%=user.message%></div>
<div id="mainIP" hidden="hidden"><%=httpUrl%>|<%=socketUrl%></div>
    </body>
    <script src="../../js/jquery.js"></script>
    <script type="text/javascript">

    var connectIP = $("#mainIP").html();
    var socketUrl=connectIP.split("|")[1];

    var socket = '';
    var url = socketUrl+'signup';

        $(function() {
            if ('WebSocket' in window){
                socket = new WebSocket(url);
            }else if ('MozWebSocket' in window){
                socket = new MozWebSocket(url);
            }

            socket.onopen = function() {
                var d={
                    avatar:"<%=user.avatar%>",
                    num:"<%=user.num%>",
                    name:"<%=user.name%>"
                };
                socket.send(JSON.stringify(d));
            };
            getWidthAndHeigth();
        })

        function getWidthAndHeigth(){
            var width = $(window).height();
            var heigth = $(window).width();
            $("#bodyId").css({
                "heigth":heigth,
                "width":width
            })
        }
    </script>
</html>