<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>点击开始抽奖</title>

    <link href="../../css/bootstrap.css" rel="stylesheet" type="text/css" />
     <link href="../../css/hc/click.css" rel="stylesheet" type="text/css" /> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=0.5, maximum-scale=2.0, user-scalable=yes" />
    
</head>
<body style="height: 100%;background:url(../../img/fahongbao.png) ;background-size:cover;text-align: center;">
    <div class="col-lg-4 col-md-4 col-sm-2 col-xs-2" style="text-align: center;margin-top: 90% ;margin-left: 35%;">
        <img id="btnclsid"  class="btncls" style="animation: pulse 1s infinite alternate;" onclick="sendMassage()" src="../../img/sj-star.png">
    </div>
<div id="mainIP" hidden="hidden"><%=httpUrl%>|<%=socketUrl%></div>
<script type="text/javascript" src="../../js/li/jquery.min.js"></script>
<script type="text/javascript" src="../../js/hc/bonus.js"  ></script>
<script src="../../js/plugins/layer/layer.js"></script>
<script type="text/javascript">
    var connectIP = $("#mainIP").html();
    var ip =connectIP.split("|")[0];
    function bonusFun(){
        setTimeout(sendMassage(),1000);
    }
    function sendMassage(){
        $.ajax({
            url:ip+'management/clicktorubbonusagin',
            type:'post',
            async:false,
            data:{"bonus":"bonus:zhu"},
            success:function(data){
              
              layer.msg("消息发送成功");
            },
            error:function(){
              layer.msg("消息发送失败");
            }
        })
    }

</script>
</html>